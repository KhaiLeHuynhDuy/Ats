@model Ats.Models.Member.MemberLoyaltyDetailViewModel;
@using Lpnet.WebApp.Resources
@{
    SelectList tiers = ViewBag.Tiers;}

@using (Html.BeginForm("ViewLoyalty", "Member", new { @class = "custom-validation", role = "form" }, FormMethod.Get))
{


    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="modal-header">
        <h5 class="modal-title mt-0" id="viewModalLabel">@Resource.Common_label_View</h5>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    <div class="modal-body">
        <div>

            <div class="form-group row">
                <div class="col-md-12">
                    <label>@Resource.Common_label_tierLevel: </label>
                        @Html.DisplayFor(m => m.TierName, new { @class = "form-control", id = "creation-name", required = "required" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <label>@Resource.Common_label_effectivefrom: </label>
                            @Html.DisplayFor(m => m.ActiveFrom, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", id = "datepicker", required = "required" })
                        </div>
                        <div class="col-lg-6">
                            <label>@Resource.Common_label_effectiveEnd: </label>
                            @Html.DisplayFor(m => m.ActiveEnd, "{0:yyyy-MM-dd}", new { @class = "form-control", id = "datepicker", type = "date" })
                        </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <label>@Resource.Common_label_upgradePoint: </label>
                            @Html.DisplayFor(m => m.UpgradePoint, new { placeholder = " ", @class = "form-control", id = "creation-name" })
                        </div>
                        <div class="col-lg-6">
                            <label>@Resource.Common_label_downgradePoint: </label>
                            @Html.DisplayFor(m => m.DowngradePoint, new { placeholder = " ", @class = "form-control", id = "creation-name" })
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">@Resource.Common_label_close</button>
    </div>
}
