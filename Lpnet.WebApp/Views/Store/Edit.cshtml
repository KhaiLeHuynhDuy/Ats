@model Ats.Models.Store.StoreViewModel;
@using Lpnet.WebApp.Resources
@{
    if (Model.Id == 0)
    {
  ViewBag.Title = @Resource.ViewBag_Title_Store_Create;
    }
    else
    {
  ViewBag.Title = @Resource.ViewBag_Title_Store_Edit;
    }

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    SelectList lsteams = ViewBag.Teams;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="col-sm-6">
            <div class="page-title-box">
                @*<h4 class="font-size-18">@Resource.Sidebar_configurations_store</h4>*@
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Panda Loyalty</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Store")">@Resource.Sidebar_configurations_store</a></li>
                    @if (Model.Id == 0)
                    {
                        <li class="breadcrumb-item active"><a href="@Url.Action("Create", "Store")">@Resource.Common_label_create</a></li>
                    }
                    else
                    {
                        <li class="breadcrumb-item active"><a href="@Url.Action("Edit", "Store", new {id = Model.Id })">@Resource.Common_label_edit</a></li>
                    }

                </ol>
            </div>
        </div>
        @using (Html.BeginForm("Edit", "Store", FormMethod.Post, new { @class = "form-horizontal form-wizard-wrapper", enctype = "multipart/form-data", role = "form" }))
        {<!-- start page title -->
            <div class="col-sm-9">
                <h4 class="font-size-20">@Resource.Commom_Label_Store </h4>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <p class="badge badge-pill badge-success font-italic font-size-12">@ViewBag.StatusMessageProfile</p>

                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.Id)
                            <div class="row  ">
                                <div class="col-12 mt-1 ">
                                    <div class="form-group  row ">
                                        <label for="txtcode" class="col-lg-2 mt-1  text-left"><a class="text-danger">*</a>@Resource.Common_label_storecode: </label>
                                        @if (Model.Id == 0)
                                        {
                                            <div class="col-lg-7">
                                                @Html.TextBoxFor(m => m.StoreCode, new { @class = "form-control", id = "txt_codeStore", name = "txt_codeStore" })
                                            </div>
                                        }
                                        else
                                        { <div class="col-lg-7">
                                                @Html.TextBoxFor(m => m.StoreCode, new { @disabled = "", @class = "form-control" })
                                            </div>
                                        }
                                        <div class=" col-3 text-left mt-2 ">
                                            @if (Model.Id == 0)
                                            {
                                                <div class="row">
                                                    <div class="col-lg-1">
                                                        <div class=" ">
                                                            @Html.CheckBoxFor(m => m.StoreCodeAutomatically, new { @class = "form-group", id = "ck_storecode" })
                                                        </div>
                                                    </div>
                                                    <label for="ckb_autocodegen" class="col-lg-11 text-left">@Resource.Common_label_autogeneratedstorecode</label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 mt-1 ">
                                    <div class="form-group row">
                                        <label class="col-lg-2 text-left mt-1"><a class="text-danger">*</a>@Resource.Common_label_storename:</label>
                                        <div class="col-lg-7">
                                            @Html.TextBoxFor(m => m.StoreName, new { placeholder = "", @class = "form-control", required = "required" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row ">
                                <div class="col-12 mt-1  ">
                                    <div class="form-group row">
                                        <div class="col-2">
                                            <label class=" mt-1 text-left">@Resource.Sidebar_configurations_teams:</label>
                                        </div>
                                        <div class="col-7">
                                            @Html.DropDownListFor(m => m.TeamId, lsteams, new { placeholder = "", @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12  mt-1  ">
                                    <div class="form-group row">
                                        <label class="col-lg-2 mt-1 text-left"><a class="text-danger">*</a> @Resource.Common_label_phone:</label>
                                        <div class="col-lg-7">
                                            @Html.TextBoxFor(m => m.Phone, new { placeholder = "", @class = "form-control", id = "txt_phone" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 mt-1">
                                    <div class="form-group row">
                                        <label class="col-lg-2 col-form-label text-left">@Resource.Common_label_email:</label>
                                        <div class="col-lg-7">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "cashAmount" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 mt-1">
                                    <div class="form-group row">
                                        <label class="col-lg-2 mt-1   text-left"> @Resource.Common_label_storeAddress</label>
                                        <div class="col-lg-7">
                                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @id = "discount" })
                                        </div>
                                        <div class="mt-2"><lable clas=""></lable></div>
                                    </div>
                                </div>
                                <div class="col-12  mt-1 ">
                                    <div class="form-group row">
                                        <label for="txtcode" class="col-lg-2  mt-1  text-left">@Resource.Common_label_city</label>
                                        <div class="col-lg-7 ">
                                            @Html.TextBoxFor(m => m.City, new { @class = "form-control", name = "txt_city" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 mt-1  ">
                                    <div class="form-group row">
                                        <label class="col-lg-2  mt-1   text-left">  @Resource.Common_label_Status:</label>
                                        <div class="col-lg-7">
                                            @Html.CheckBoxFor(m => m.Active, new { @class = "form-group", @name = "ck_active" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2 ml-1">
                                <a href="@Url.Action("Index", "Store",  new { pageIndex = 0 })" class="btn btn-primary waves-effect waves-light col-md-3 mt-3 mr-2">@Resource.Common_label_cancel</a>
                                <button type="submit" class="btn btn-primary waves-effect waves-light col-md-3 mt-3">@Resource.Common_label_save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>}
    </div> <!-- container-fluid -->
</div>
<!-- End Page-content -->


@section scripts{

    <script>
        $(document).ready(function () {

            $("#ck_storecode").click(function () {
                $("#txt_codeStore").attr('disabled', !$("#txt_codeStore").attr('disabled'));
            });
        });
    </script>





}


