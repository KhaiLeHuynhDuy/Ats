@using Lpnet.WebApp.Resources
@{
    ViewBag.Title = "Calendar | Panda Loyalty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <!-- Plugin css -->
    <link href="~/assets/libs/fullcalendar/fullcalendar.min.css" rel="stylesheet" type="text/css" />
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row align-items-center">
            <div class="col-sm-6">
                <div class="page-title-box">
                    <h4 class="font-size-18">@Resource.Common_label_calendar</h4>
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Megapoint</a></li>
                        <li class="breadcrumb-item active">@Resource.Common_label_calendar</li>
                    </ol>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="float-right d-none d-md-block">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle waves-effect waves-light" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="mdi mdi-settings mr-2"></i> @Resource.Common_label_setting
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="#">@Resource.Common_label_action</a>
                            <a class="dropdown-item" href="#">@Resource.Common_label_anotheraction</a>
                            <a class="dropdown-item" href="#">@Resource.Common_label_somethingelsehere</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">@Resource.Common_label_separatedlink</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id='calendar'></div>
                        <div style='clear:both'></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->



    </div> <!-- container-fluid -->
</div>
<!-- End Page-content -->

@section scripts{

    <!-- plugin js -->
    <script src="~/assets/libs/moment/min/moment.min.js"></script>
    <script src="~/assets/libs/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/assets/libs/fullcalendar/fullcalendar.min.js"></script>

    <!-- Calendar init -->
    <script src="~/assets/js/pages/calendar.init.js"></script>
}