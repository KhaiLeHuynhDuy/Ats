@model Ats.Models.Product.ProductOrderViewModel;
@using Lpnet.WebApp.Resources
@{
    ViewBag.Title = @Resource.ViewBag_Title_ProductOrder_Detail;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h5 {
        border-left: 5px solid #626ed4;
    }
</style>



@{
    SelectList member = ViewBag.Member;
    SelectList productorderstatus = ViewBag.ProductOrderStatus;
    SelectList productcollectionitem = ViewBag.ProductCollectionItem;

}
<div class="page-content">
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row align-items-center">
            <div class="col-sm-6 form-group">
                <div class="page-title-box">
                    <ol class="breadcrumb mb-1">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Panda Loyalty</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ProductOrder")">@Resource.Common_label_productOrder</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Detail", "ProductOrder" ,new { id = Model.Id})">@Resource.Common_label_detail</a></li>
                    </ol>
                    <h3 class="font-size-20">@Resource.Common_label_productCollection</h3>
                </div>
            </div>
        </div>
        <!-- end page title -->
        @using (Html.BeginForm("Index", "ProductOrder", new { @class = "form-horizontal form-wizard-wrapper", role = "form" }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row form-group ">
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a for="txtPhoneNumber" class="col-lg-3 col-form-label text-left text-dark"><strong>@Resource.Common_label_member:</strong></a>
                                        <div class="col-6 mt-2">
                                            @Html.DisplayFor(model => model.NameMember)
                                        </div>
                                    </div>
                                    <hr />
                                </div>
                               
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a for="txtPhoneNumber" class="col-lg-3 col-form-label text-left text-dark"><strong>@Resource.Common_label_productCollection:</strong></a>
                                        <div class="col-6 mt-2">
                                            @Html.DisplayFor(model => model.NameCollection)
                                        </div>
                                    </div>   


                                </div>
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a for="txtPhoneNumber" class="col-lg-3 col-form-label text-left text-dark"><strong>@Resource.Common_label_collectionItem:</strong></a>
                                        <div class="col-6 mt-2">
                                            @Html.DisplayFor(model => model.NameProduct)
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a for="txtPhoneNumber" class="col-lg-3 col-form-label text-left text-dark"> <strong>@Resource.Common_label_price:</strong></a>
                                        <div class="col-6 mt-2">
                                            @Html.DisplayFor(model => model.Price)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a class="col-lg-3 col-form-label text-left text-dark"> <strong>@Resource.Common_label_Quantity:</strong></a>
                                        <div class="col-2 mt-2">
                                            @Html.DisplayFor(model => model.Quantity)
                                        </div>
                                        <a class="col-lg-1 col-form-label text-left text-dark"> <strong>@Resource.Common_label_Total:</strong></a>
                                        <div class="col-2 mt-2">
                                            @Html.DisplayFor(model => model.TotalPoint)  @Resource.Common_td_Point
                                        </div>
                                    </div>
                               
                                </div>
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a  class="col-lg-3 col-form-label text-left text-dark mt-2"> <strong>@Resource.Common_label_tableOrderStatus:</strong></a>
                                        <div class="col-6 mt-2 mr-5">
                                            @if (Model.OrderStatus == Ats.Domain.Store.Models.PRODUCT_ORDER_STATUS.NEW)
                                            {<label class=" text-white  rounded-pill btn btn-sm btn-success">@Html.DisplayFor(model => model.OrderStatus)</label>}
                                            @if (Model.OrderStatus == Ats.Domain.Store.Models.PRODUCT_ORDER_STATUS.ON_DELIVERY)
                                            {<label class=" text-white  rounded-pill btn btn-sm btn-warning ">@Html.DisplayFor(model => model.OrderStatus)</label>}
                                            @if (Model.OrderStatus == Ats.Domain.Store.Models.PRODUCT_ORDER_STATUS.COMPLETE)
                                            {<label class=" text-white rounded-pill btn btn-sm btn-info">@Html.DisplayFor(model => model.OrderStatus)</label>}
                                            @if (Model.OrderStatus == Ats.Domain.Store.Models.PRODUCT_ORDER_STATUS.CANCEL)
                                            {<label class=" text-white  rounded-pill btn btn-sm btn-danger mr-5">@Html.DisplayFor(model => model.OrderStatus)</label>}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a for="txtPhoneNumber" class="col-lg-3 col-form-label text-left text-dark"><strong>@Resource.Common_label_date:</strong></a>
                                        <div class="col-6 mt-2">
                                            @Html.DisplayFor(model => model.DateCreate)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a for="txtPhoneNumber" class="col-lg-3 col-form-label text-left text-dark"> <strong>@Resource.Commom_Label_receiver:</strong></a>
                                        <div class="col-6 mt-2">
                                            @Html.DisplayFor(model => model.Receiver)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a for="txtPhoneNumber" class="col-lg-3 col-form-label text-left text-dark"><strong>@Resource.Commom_Label_phoneno:</strong></a>
                                        <div class="col-6 mt-2">
                                            @Html.DisplayFor(model => model.PhoneNo)
                                        </div>
                                    </div>
                                </div> 
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a for="txtPhoneNumber" class="col-lg-3 col-form-label text-left text-dark"><strong>@Resource.Common_label_shippingAddress:</strong></a>
                                        <div class="col-6 mt-2">
                                            @Html.DisplayFor(model => model.ShippingAddress)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a for="txtPhoneNumber" class="col-lg-3 col-form-label text-left text-dark"><strong>@Resource.Common_label_remark:</strong></a>
                                        <div class="col-6 mt-2">
                                            @Html.DisplayFor(model => model.Remark)
                                        </div>
                                    </div>
                                </div>



                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    @if (Model.OrderStatus == Ats.Domain.Store.Models.PRODUCT_ORDER_STATUS.NEW)
                                    {<a href="@Url.Action("Index", "ProductOrder", new { pageIndex = 0 })" class="btn btn-secondary waves-effect">@Resource.Common_label_close</a>}
                                    @if (Model.OrderStatus == Ats.Domain.Store.Models.PRODUCT_ORDER_STATUS.ON_DELIVERY)
                                    {<a href="@Url.Action("IndexTabDelivering", "ProductOrder", new { pageIndex = 0 })" class="btn btn-secondary waves-effect">@Resource.Common_label_close</a>}
                                    @if (Model.OrderStatus == Ats.Domain.Store.Models.PRODUCT_ORDER_STATUS.COMPLETE)
                                    {<a href="@Url.Action("IndexTabReceived", "ProductOrder", new { pageIndex = 0 })" class="btn btn-secondary waves-effect">@Resource.Common_label_close</a>}
                                    @if (Model.OrderStatus == Ats.Domain.Store.Models.PRODUCT_ORDER_STATUS.CANCEL)
                                    {<a href="@Url.Action("IndexTabCancelled", "ProductOrder", new { pageIndex = 0 })" class="btn btn-secondary waves-effect">@Resource.Common_label_close</a>}
                                </div>
                                <div class="col-md-6 text-right">
                                    @*<button type="submit" class="btn btn-primary waves-effect waves-light ml-3">Send</button>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- container-fluid -->
        }

    </div>
</div>
<!-- End Page-content -->


@section scripts{
   
    <script>
        $('input.input-qty').each(function () {
            var $this = $(this),
                qty = $this.parent().find('.is-form'),
                min = Number($this.attr('min')),
                max = Number($this.attr('max'))
            if (min == 0) {
                var d = 0
            } else d = min
            $(qty).on('click', function () {
                if ($(this).hasClass('minus')) {
                    if (d > min) d += -1
                } else if ($(this).hasClass('plus')) {
                    var x = Number($this.val()) + 1
                    if (x <= max) d += 1
                }
                $this.attr('value', d).val(d)
            })
        })
    </script>

}