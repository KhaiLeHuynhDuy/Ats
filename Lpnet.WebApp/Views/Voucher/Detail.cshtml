                                            @Html.DisplayFor(model => model.VoucherCode)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a for="txtPhoneNumber" class="col-lg-3 col-form-label text-left text-dark"> @Resource.Common_label_voucherName: </a>
                                        <div class="col-6 mt-2">
                                            @Html.DisplayFor(model => model.VoucherName)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 m-2">
                                    <div class=" row">
                                        <a for="txtPhoneNumber" class="col-lg-3 col-form-label text-left text-dark"> @Resource.Common_label_voucherCategory: </a>
                                        <div class="col-6 mt-2">
                                            @Html.DisplayFor(model => model.VoucherCategoryName)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 m-2">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class=" row">
                                                <a for="txtEmailAddress" class="col-lg-3 col-form-label text-left text-dark"> @Resource.Common_label_type : </a>
